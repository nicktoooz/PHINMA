<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Help"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/background">
    <include
        android:id="@+id/header"
        layout="@layout/frag_header"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEARNING PROGRAMS"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary"
        android:fontFamily="@font/optima_medium"
        android:letterSpacing="-0.03"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/flex_bg"
            android:scaleType="centerCrop"
            android:foreground="@drawable/card_gradient"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLEX"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/optima_medium"
                android:letterSpacing="0.1"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/myriad_pro"
                android:textColor="@color/white"
                android:text="Mauris accumsan mollis nibh in dictum. Morbi orci tortor, tempus at elementum at, pharetra quis nunc. Maecenas risus justo, feugiat in enim a, dignissim dictum ligula" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/flex_bg"
            android:scaleType="centerCrop"
            android:foreground="@drawable/card_gradient"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAD"
                android:fontFamily="@font/optima_medium"
                android:letterSpacing="0.1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/myriad_pro"
                android:textColor="@color/white"
                android:text="Mauris accumsan mollis nibh in dictum. Morbi orci tortor, tempus at elementum at, pharetra quis nunc. Maecenas risus justo, feugiat in enim a, dignissim dictum ligula" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>